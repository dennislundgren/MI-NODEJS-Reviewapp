<main class="explore-page">

  <section class="container container--search">
    <form action="/search" method="POST" class="form">
      <input
        type="text"
        name="searchText"
        id="searchText"
        class="form__input"
      />
      <label for="searchText" class="form__lable">Search for restaurants</label>
      <label for="submitBtn" class="form__searchBtn"><i
          class="fa-solid fa-magnifying-glass"
        ></i></label>
      <input
        type="submit"
        class="form__submit"
        value="Search"
        id="searchBtn"
        hidden
      />
    </form>
  </section>

  <section class="wrapper wrapper--restaurants">
    <h2 class="heading">Top 5 restaurants</h2>

    <div class="container container--restaurant">
      {{#each restaurants}}
        <div class="card" data-restaurant-id="{{_id}}">
          <span
            class="restaurant-icon restaurant-icon--restaurant"
            data-restaurant-icon="assets/svg/{{kitchenType}}.svg"
          ></span>
          <h5 class="title">{{name}}</h5>
          <span
            class="rating rating--restaurant"
            data-restaurant-rating="{{rating}}"
          ></span>
        </div>
      {{/each}}
    </div>

  </section>

  <section class="wrapper wrapper--reviews">
    <h2 class="heading">Recent reviews</h2>

    {{#each reviews}}

      <div class="container container--review">
        <span
          class="restaurant-icon restaurant-icon--review"
          data-restaurant-icon="{{rating}}"
        ></span>
        <div class="block">
          <h5 class="title">{{restaurantName}}</h5>
          <span
            class="rating rating--review"
            data-review-rating="{{rating}}"
          ></span>
          <span class="faded-text">{{displayName}}</span>
        </div>
        <a href="/reviews/{{_id}}" class="faded-text" title="Review Link">Read
          review &gt;</a>
      </div>

    {{/each}}

  </section>
</main>
{{>navbar}}